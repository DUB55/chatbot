{
  "version": 2,
  "rewrites": [
    {
      "source": "/",
      "destination": "/chatbot.html"
    },
    {
      "source": "/system-status",
      "destination": "api/index.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "api/**"
    }
  }
}
